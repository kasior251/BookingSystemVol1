@model BookingSystem.Models.Ticket

@{
    ViewBag.Title = "Confirmation";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Scripts/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <h2>Your booking is comfirmed</h2>

    <div>
        <h4>Ticket</h4>
        <dl class="dl-horizontal"></dl>
        <div>
            <p>
                <h5>Confirmation nr: @Model.id</h5>

                @for (int i = 0; i < Model.passengers.Count; i++)
            {   <h5>Passenger @(i + 1)</h5>
        <p>@Html.LabelFor(model => model.passengers[i].firstName, htmlAttributes: new { @class = "control-label col-md-2" }) @Model.passengers[i].firstName</p>

        <p>@Html.LabelFor(model => model.passengers[i].lastName, htmlAttributes: new { @class = "control-label col-md-2" }) @Model.passengers[i].lastName</p>
                }
        </div>
        
    </div>
    
    <br /> 
    
</body>
</html>
   